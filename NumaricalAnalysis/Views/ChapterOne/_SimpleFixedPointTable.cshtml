@model List<SimpleFixedPoint>
<div class="card-body">

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th> # </th>
                <th> Xi </th>
                <th> Xi+1 </th>              
                <th> error </th>
            </tr>
        </thead>


        @foreach (var row in Model)
        {
            <tbody>
                <tr>
                    <td>@row.Iteration</td>
                    <td>@row.Xi</td>
                    <td>@row.XiPluse1</td>
                    <td>@row.Error %</td>


                </tr>
            </tbody>
        }



    </table>
</div>