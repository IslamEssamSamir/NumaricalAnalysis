@model ChapterTwoResult



<div class="card mb-5">
    <div class="card-body">


        @if (ChapterTwoResult.usedMethod == UsedMethod.GaussElimination || ChapterTwoResult.usedMethod == UsedMethod.LUDecomposition)
        {
            <div class="row mb-2 justify-content-center ">
                <div class="col-5 text-warning mb-3 ">
                    <h3>
                        @Model.UpperOrLowerMatrix
                    </h3>
                </div>
            </div>


            <div class="row mb-2 justify-content-center ">
                <div class="col-5 text-danger mb-3 ">
                    <h4>
                        @Model.Multiplier
                    </h4>
                </div>
            </div>

            <div class="row mb-2 justify-content-center ">
                <div class="col-5 text-secondary mb-3 ">
                    <h4>
                        @Model.ResultStep
                    </h4>
                </div>

            </div>




            <div class="row mb-2 justify-content-center justify-content-evenly">
                <input class="col-2" disabled value="@Model.Matrix[0,0]" />
                <input class="col-2" disabled value="@Model.Matrix[0,1]" />
                <input class="col-2" disabled value="@Model.Matrix[0,2]" />
                <input class="col-2" disabled value="@Model.Matrix[0,3]" />
            </div>


            <div class="row mb-2 justify-content-center justify-content-evenly">
                <input class="col-2" disabled value="@Model.Matrix[1,0]" />
                <input class="col-2" disabled value="@Model.Matrix[1,1]" />
                <input class="col-2" disabled value="@Model.Matrix[1,2]" />
                <input class="col-2" disabled value="@Model.Matrix[1,3]" />
            </div>




            <div class="row mb-2 justify-content-center justify-content-evenly">
                <input class="col-2" disabled value="@Model.Matrix[2,0]" />
                <input class="col-2" disabled value="@Model.Matrix[2,1]" />
                <input class="col-2" disabled value="@Model.Matrix[2,2]" />
                <input class="col-2" disabled value="@Model.Matrix[2,3]" />
            </div>

        }
        else if (ChapterTwoResult.usedMethod == UsedMethod.CramerRule)
        {


           



            <div class="row mb-2 justify-content-center justify-content-evenly">
                <input class="col-2" disabled value="@Model.Matrix[0,0]" />
                <input class="col-2" disabled value="@Model.Matrix[0,1]" />
                <input class="col-2" disabled value="@Model.Matrix[0,2]" />
            </div>


            <div class="row mb-2 justify-content-center justify-content-evenly">
                <input class="col-2" disabled value="@Model.Matrix[1,0]" />
                <input class="col-2" disabled value="@Model.Matrix[1,1]" />
                <input class="col-2" disabled value="@Model.Matrix[1,2]" />
            </div>




            <div class="row mb-2 justify-content-center justify-content-evenly">
                <input class="col-2" disabled value="@Model.Matrix[2,0]" />
                <input class="col-2" disabled value="@Model.Matrix[2,1]" />
                <input class="col-2" disabled value="@Model.Matrix[2,2]" />
            </div>





            <div class="row mb-2 justify-content-center ">
                <div class="col-10 text-secondary mb-2 mt-4 ">
                    <h3>
                        @Model.ResultStep
                    </h3>
                </div>

            </div>
        }



    </div>


</div>

