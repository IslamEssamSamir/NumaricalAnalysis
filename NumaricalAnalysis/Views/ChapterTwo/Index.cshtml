                    <span asp-validation-for="Z1" class="text-danger"></span>
                </div>


                <div class="col-2">

                    <div class="input-group">

                        <input type="text" class="form-control" value="" asp-for="Z2" aria-label=" Username" aria-describedby="basic-addon1">
                        <div class="input-group-prepend">
                            <span class="input-group-text">X2</span>
