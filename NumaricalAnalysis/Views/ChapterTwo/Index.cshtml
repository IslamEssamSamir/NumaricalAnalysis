                    </div>
                    <span asp-validation-for="IsPivoting" class="text-danger"></span>
                </div>

            </div>

            <div class="row mb-3">

                <div class="col-2">

                    <div class="input-group">

                        <input type="text" class="form-control" value="" asp-for="X1">
