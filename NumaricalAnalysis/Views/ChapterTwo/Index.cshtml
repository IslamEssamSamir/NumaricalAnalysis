    <script>
        //document.getElementById("").addEventListener("se")
        $(document).ready(function(){
            $('.Pivoting').on('click',function(){
                //$('#Pivoting').removeClass('d-none');
                $('#Pivoting').removeAttr('disabled');
              

            });


            $('.notPivoting').on('click', function () {
                //$('#Pivoting').addClass('d-none');
                $('#Pivoting').attr('disabled', 'disabled');
                $('#Pivoting').prop('checked', false);
             
            });

            

        
        
        });


    </script>


}
